<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_marginStart="@dimen/dime_16dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_product"
        app:layout_constraintTop_toTopOf="@id/img_product" />

    <TextView
        android:id="@+id/txt_product_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_product_type"
        android:maxLines="1"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/img_product"
        app:layout_constraintStart_toStartOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_name" />


    <TextView
        android:id="@+id/txt_product_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/img_product"
        app:layout_constraintStart_toStartOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_type" />


    <TextView
        android:id="@+id/txt_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/img_product"
        app:layout_constraintStart_toStartOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_tax" />


</androidx.constraintlayout.widget.ConstraintLayout>